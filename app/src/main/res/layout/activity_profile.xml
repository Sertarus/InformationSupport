<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Информация о текущей сессии:"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:padding="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Логин пользователя:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/loginTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Логин"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Идентификатор устройства:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/deviceIDTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Идентификатор"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="10dp"/>

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отправить отчёт об ошибках"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/errorInfoButton"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

</LinearLayout>